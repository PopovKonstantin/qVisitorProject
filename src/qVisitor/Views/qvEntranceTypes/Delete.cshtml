@model qVisitor.Models.qvEntranceType

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_RegLayout.cshtml";
}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Удалить тип посещения</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="btn-group btn-breadcrumb" style="padding-bottom:20px;">
        <a asp-controller="qvEntranceTypes" asp-action="Index" class="btn btn-default">Типы посещений</a>
        <a href="#" class="btn btn-default">Удалить тип посещения</a>
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="glyphicon glyphicon-list-alt"></i>
                    Удалить тип посещения
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <h3>Вы действительно хотите удалить тип посещения @Html.DisplayFor(model => model.Description) с кодом @Html.DisplayFor(model => model.Code)?</h3>
                    <div>
                        <form asp-action="Delete">
                            <div class="form-actions no-color">
                                <input type="submit" value="Удалить" class="btn" />
                                <a style="color:#333;" asp-controller="qvCountries" asp-action="Index">
                                    <button type="button" class="btn">Отменить</button>
                                </a>
                            </div>
                        </form>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
<!-- /.col-lg-6 -->
