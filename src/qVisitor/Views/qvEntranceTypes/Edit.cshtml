@model qVisitor.Models.qvEntranceType

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_RegLayout.cshtml";
}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Изменить тип посещения</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="btn-group btn-breadcrumb" style="padding-bottom:20px;">
        <a asp-controller="qvEntranceTypes" asp-action="Index" class="btn btn-default">Типы посещений</a>
        <a href="#" class="btn btn-default">Изменить тип посещения</a>
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="glyphicon glyphicon-list-alt"></i>
                    Изменить тип посещения
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <form asp-action="Edit">
                        <div class="form-horizontal">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label asp-for="Code" class="col-md-2 control-label"></label>
                                <div class="col-md-10">
                                    <input asp-for="Code" class="form-control" />
                                    <span asp-validation-for="Code" class="text-danger" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="col-md-2 control-label"></label>
                                <div class="col-md-10">
                                    <input asp-for="Description" class="form-control" />
                                    <span asp-validation-for="Description" class="text-danger" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Сохранить" class="btn" />
                                    <a style="color:#333;" asp-controller="qvCountries" asp-action="Index">
                                        <button type="button" class="btn">Отменить</button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- /.row -->
                <!-- /.row -->

            </div>
        </div>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}