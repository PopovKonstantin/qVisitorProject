@model IEnumerable<qVisitor.Models.qvHotEntrance>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_RegLayout.cshtml";
}

<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="glyphicon glyphicon-list-alt"></i>
                Список незарегистрированных посетителей
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    Фамилия
                                </th>
                                <th>
                                    Имя
                                </th>
                                <th>
                                    Отчество
                                </th>
                                <th>
                                    Номер документа
                                </th>
                                <th>
                                    Организация
                                </th>
                                <th>
                                    Сопровождающий
                                </th>
                                <th>
                                    Комментарий
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Surname)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Patronymic)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DocumentNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Organization)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Attendant)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Comment)
                                    </td>
                                    <td>
                                        <a style="color:#333;" target="_parent" asp-controller="qvHotEntrances" asp-action="Details" asp-route-id="@item.Id" asp-route-reffid="@ViewBag.Reffid"><button class="btn">Просмотр</button></a>
                                        <a style="color:#333;" target="_parent" asp-controller="qvHotEntrances" asp-action="Edit" asp-route-id="@item.Id" asp-route-reffid="@ViewBag.Reffid"><button class="btn">Изменить</button></a>
                                        <a style="color:#333;" target="_parent" asp-controller="qvHotEntrances" asp-action="Delete" asp-route-id="@item.Id" asp-route-reffid="@ViewBag.Reffid"><button class="btn">Удалить</button></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
                <div class="well">
                    <a style="color:#333;" asp-controller="qvHotEntrances" asp-action="Create" asp-route-reffid="@ViewBag.Reffid" target="_parent">
                        <button type="button" class="btn">Зарегистрировать посетителя</button>
                    </a>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
                                        
<!-- /.row -->
<!-- /.row -->
<!-- /.col-lg-6 -->
<!-- jQuery -->
<script src="~/bower_components/jquery/dist/jquery.min.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="~/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

<!-- Metis Menu Plugin JavaScript -->
<script src="~/bower_components/metisMenu/dist/metisMenu.min.js"></script>

<!-- DataTables JavaScript -->
<script src="~/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
<script src="~/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js"></script>

<!-- Custom Theme JavaScript -->
<script src="~/js/sb-admin-2.js"></script>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>
