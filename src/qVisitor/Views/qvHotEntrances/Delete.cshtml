@model qVisitor.Models.qvHotEntrance

@{
    ViewData["Title"] = "Delete";
}


<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Удалить страну</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="btn-group btn-breadcrumb" style="padding-bottom:20px;">
        <a asp-controller="Home" asp-action="Index" class="btn btn-default"><i class="glyphicon glyphicon-home"></i></a>
        <a asp-controller="qvCheckPoints" asp-action="Index" class="btn btn-default">КПП</a>
        <a asp-controller="qvCheckPoints" asp-action="Details" asp-route-id="@ViewBag.Reffid" class="btn btn-default">КПП №@ViewBag.Reffid</a>
        <a href="#" class="btn btn-default">Изменить заявку</a>
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="glyphicon glyphicon-list-alt"></i>
                    Удалить страну
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <h3>Вы действительно хотите удалить заявку на посетителя?</h3>
                    <div>
                        <dl class="dl-horizontal">
                            <dt>
                                Департамент
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Department.Name)
                            </dd>
                            <dt>
                                Фамилия
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Surname)
                            </dd>
                            <dt>
                                Имя
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Name)
                            </dd>
                            <dt>
                                Отчество
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Patronymic)
                            </dd>
                            <dt>
                                Номер документа
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.DocumentNumber)
                            </dd>
                            <dt>
                                Организация
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Organization)
                            </dd>




                            <dt>
                                Сопровождающий
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Attendant)
                            </dd>

                            <dt>
                                Комментарий
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Comment)
                            </dd>
                        </dl>

                        <form asp-action="Delete">
                            <div class="form-actions no-color">
                                <input type="submit" value="Удалить" class="btn" />
                                <a style="color:#333;" asp-controller="qvCheckPoints" asp-action="Details" asp-route-id="@ViewBag.Reffid">
                                    <button type="button" class="btn">Отменить</button>
                                </a>
                            </div>
                        </form>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <!-- /.row -->

</div>
<!-- /.col-lg-6 -->
<!-- jQuery -->
<script src="~/bower_components/jquery/dist/jquery.min.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="~/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

<!-- Metis Menu Plugin JavaScript -->
<script src="~/bower_components/metisMenu/dist/metisMenu.min.js"></script>

<!-- DataTables JavaScript -->
<script src="~/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
<script src="~/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js"></script>

<!-- Custom Theme JavaScript -->
<script src="~/js/sb-admin-2.js"></script>

