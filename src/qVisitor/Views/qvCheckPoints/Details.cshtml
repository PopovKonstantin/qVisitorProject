@model qVisitor.Models.qvCheckPoint

@{
    ViewData["Title"] = "Details";
}


<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">@Model.Name</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="btn-group btn-breadcrumb" style="padding-bottom:20px;">
        <a asp-controller="Home" asp-action="Index" class="btn btn-default"><i class="glyphicon glyphicon-home"></i></a>
        <a asp-controller="qvCheckPoints" asp-action="Index" class="btn btn-default">КПП</a>
        <a href="#" class="btn btn-default">@Model.Name</a>
    </div>
    <!-- /.col-lg-12 -->
    <div>
        @{

            Html.RenderPartial("~/Views/qvEntrances/Index.cshtml", Model.Entrances);
        }
        <div class="well">
            <a style="color:#333;" asp-controller="qvEntrances" asp-action="Create" asp-route-reffid="@Model.Id">
                <button type="button" class="btn">Добавить заявку</button>
            </a>
        </div></div></div></div></div>          
    </div>

<div>
        @{
            Html.RenderPartial("~/Views/qvNotRecognizedDocs/Index.cshtml", Model.NotRecognizedDocs);
        }
    <div class="well">
        <a style="color:#333;" asp-controller="qvNotRecognizedDocs" asp-action="Create" asp-route-id="@Model.Id" >
            <button type="button" class="btn">Добавить неопознанного посетителя</button>
        </a>
    </div></div></div></div></div>
</div>
<div>
    <div>
        <iframe id="frame" src="http://localhost:54330/qvHotEntrances/Index/@Model.Id" scrolling="no" style="width:100%;height:; border:1px solid transparent; border-radius: 4px;" onload="resizeIframe(this)"></iframe>
    </div>
</div>

<script>
    function resizeIframe(obj) {
        obj.style.height = obj.contentWindow.document.body.scrollHeight + 'px';
    }
</script>

<!-- jQuery -->
<script src="~/bower_components/jquery/dist/jquery.min.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="~/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

<!-- Metis Menu Plugin JavaScript -->
