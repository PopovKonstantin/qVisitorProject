@model IEnumerable<qVisitor.Models.qvOrder>

@{
    ViewData["Title"] = "Index";
}


<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Заявки</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="btn-group btn-breadcrumb" style="padding-bottom:20px;">
        <a asp-controller="Home" asp-action="Index" class="btn btn-default"><i class="glyphicon glyphicon-home"></i></a>
        <a href="#" class="btn btn-default"> Заявки</a>
    </div>

    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="glyphicon glyphicon-list-alt"></i>
                    Список заявок
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>
                                        Состояние заявки
                                    </th>
                                    <th>
                                        Тип заявки
                                    </th>
                                    <th>
                                        Дата начала <br />действия заявки
                                    </th>
                                    <th>
                                        Время начала <br />действия заявки
                                    </th>
                                    <th>
                                        Дата окончания <br />действия заявки
                                    </th>
                                    <th>
                                        Время окончания <br />действия заявки
                                    </th>
                                    <th>
                                        Посетители
                                    </th>
                                    <th>Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.OrderStatus.Description
                                        </td>
                                        <td>
                                            @item.OrderType.Description
                                        </td>
                                        <td>
                                            @item.StartDate.Date.ToString("d")
                                        </td>
                                        <td>
                                            @item.OpenTime.ToString("H:mm")
                                        </td>
                                        <td>
                                            @item.EndDate.Date.ToString("d")
                                        </td>
                                        <td>
                                            @item.CloseTime.ToString("H:mm")
                                        </td>
                                        <td>
                                            @foreach (var v in item.RefOrderVisitors)
                                            {
                                                @String.Concat(v.Visitor.surname," ",v.Visitor.name," ",v.Visitor.patronymic) <br /><br />
                                            }
                                        </td>
                                        <td>
                                            <a style="color:#333;" asp-controller="qvOrders" asp-action="Details" asp-route-id="@item.Id"><button class="btn">Просмотр</button></a>
                                            <a style="color:#333;" asp-controller="qvOrders" asp-action="Edit" asp-route-id="@item.Id"><button class="btn">Изменить</button></a>
                                            <a style="color:#333;" asp-controller="qvOrders" asp-action="Delete" asp-route-id="@item.Id"><button class="btn">Удалить</button></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                    <div class="well">
                        <a style="color:#333;" asp-controller="qvOrders" asp-action="Create">
                            <button type="button" class="btn">Добавить заявку</button>
                        </a>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <!-- /.row -->

</div>
<!-- /.col-lg-6 -->
<!-- jQuery -->
<script src="~/bower_components/jquery/dist/jquery.min.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="~/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

<!-- Metis Menu Plugin JavaScript -->
<script src="~/bower_components/metisMenu/dist/metisMenu.min.js"></script>

<!-- DataTables JavaScript -->
<script src="~/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
<script src="~/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js"></script>

<!-- Custom Theme JavaScript -->
<script src="~/js/sb-admin-2.js"></script>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script>
    $(document).ready(function() {
        $('#dataTables-example').DataTable({
                responsive: true
        });
    });
</script>