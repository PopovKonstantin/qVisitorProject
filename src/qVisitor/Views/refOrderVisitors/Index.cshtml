@model IEnumerable<qVisitor.Models.refOrderVisitor>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_RegLayout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Список посетителей на заявку под номером @ViewBag.ReffId</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="btn-group btn-breadcrumb" style="padding-bottom:20px;">
    <a href="#" class="btn btn-default"> Список посетителей на заявку под номером @ViewBag.ReffId</a>
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="glyphicon glyphicon-list-alt"></i>
                Список посетителей на заявку под номером @ViewBag.ReffId
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.OrderId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.VisitorId)
                                </th>
                                <th>
                                    Действия
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OrderId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Visitor.surname) @Html.DisplayFor(modelItem => item.Visitor.name) @Html.DisplayFor(modelItem => item.Visitor.patronymic)
                                    </td>
                                    <td>
                                        <a style="color:#333;" asp-controller="refOrderVisitors" asp-action="Delete" asp-route-id="@item.OrderId" asp-route-visid="@item.VisitorId"><button class="btn">Удалить</button></a>
                                    </td>
                                    <td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
                <div class="well">
                    <a style="color:#333;" asp-controller="refOrderVisitors" asp-action="Create"  asp-route-reffid="@ViewBag.ReffId">
                        <button type="button" class="btn">Добавить посетителя</button>
                    </a>
                    <a style="color:#333;" asp-controller="qvOrders" asp-action="Index">
                        <button type="button" class="btn">Окончательно создать заявку</button>
                    </a>
                    <a style="color:#333;" asp-controller="refOrderVisitors" asp-action="Undo" asp-route-id="@ViewBag.ReffId">
                        <button type="button" class="btn">Отменить создание заявки</button>
                    </a>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<!-- /.row -->
<!-- /.row -->
<!-- /.col-lg-6 -->
<!-- jQuery -->
<script src="~/bower_components/jquery/dist/jquery.min.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="~/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

<!-- Metis Menu Plugin JavaScript -->
<script src="~/bower_components/metisMenu/dist/metisMenu.min.js"></script>

<!-- DataTables JavaScript -->
<script src="~/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
<script src="~/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js"></script>

<!-- Custom Theme JavaScript -->
<script src="~/js/sb-admin-2.js"></script>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script>
    $(document).ready(function() {
        $('#dataTables-example').DataTable({
                responsive: true
        });
    });
</script>