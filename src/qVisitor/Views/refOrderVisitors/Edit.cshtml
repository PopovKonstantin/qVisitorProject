@model qVisitor.Models.refOrderVisitor

@{
    ViewData["Title"] = "Edit";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Изменить данные посетителя</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="btn-group btn-breadcrumb" style="padding-bottom:20px;">
        <a asp-controller="Home" asp-action="Index" class="btn btn-default"><i class="glyphicon glyphicon-home"></i></a>
        <a asp-controller="refOrderVisitors" asp-action="EditOrdersByVisitors" asp-route-id="@Model.OrderId" class="btn btn-default">Список посетителей на заявку под номером @Model.OrderId</a>
        <a href="#" class="btn btn-default"> Изменить данные посетителя</a>
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="glyphicon glyphicon-list-alt"></i>
                    Изменить данные посетителя
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <form asp-action="Edit">
                        <div class="form-horizontal">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group hidden">
                                <label asp-for="OrderId" class="col-md-2 control-label">Заявка</label>
                                <div class="col-md-10">
                                    <select asp-for="OrderId" class="form-control" asp-items="ViewBag.OrderId"></select>
                                    <span asp-validation-for="OrderId" class="text-danger" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="VisitorId" class="col-md-2 control-label">Посетитель</label>
                                <div class="col-md-10">
                                    <select asp-for="VisitorId" class="form-control" asp-items="ViewBag.VisitorId"></select>
                                    <span asp-validation-for="VisitorId" class="text-danger" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Сохранить" class="btn" />
                                    <a style="color:#333;" asp-controller="refOrderVisitors" asp-action="EditOrdersByVisitors" asp-route-id="@Model.OrderId">
                                        <button type="button" class="btn">Отменить</button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <!-- /.row -->

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}