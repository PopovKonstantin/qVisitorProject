@model qVisitor.Models.qvEntrance

@{
    ViewData["Title"] = "Create";
}


<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Добавить КПП</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <ol class="breadcrumb">
        <li>
            <a asp-controller="qvCheckPoints" asp-action="Index"> КПП</a>
        </li>
        <li>
            <a asp-controller="qvCheckPoints" asp-action="Details" asp-route-id="@Model.CheckPointId"> Заявленные посещения </a>
        </li>
        <li class="active">
            Удалить данные по посещениям
        </li>
    </ol>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="glyphicon glyphicon-list-alt"></i>
                    Добавить страну
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <form asp-action="Create">
                        <div class="form-horizontal">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="CheckPointId" class="col-md-2 control-label">Номер КПП</label>
                                <div class="col-md-10">
                                    <select asp-for="CheckPointId" class="form-control" asp-items="ViewBag.CheckPointId"></select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="EntranceTypeId" class="col-md-2 control-label">Номер типа заявки</label>
                                <div class="col-md-10">
                                    <select asp-for="EntranceTypeId" class="form-control" asp-items="ViewBag.EntranceTypeId"></select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="OrderId" class="col-md-2 control-label">Номер заявки</label>
                                <div class="col-md-10">
                                    <select asp-for="OrderId" class="form-control" asp-items="ViewBag.OrderId"></select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="VisitorId" class="col-md-2 control-label">Номер посетителя</label>
                                <div class="col-md-10">
                                    <select asp-for="VisitorId" class="form-control" asp-items="ViewBag.VisitorId"></select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="ActionDate" class="col-md-2 control-label">Дата посещения</label>
                                <div class="col-md-10">
                                    <input type="datetime" asp-for="ActionDate" class="form-control" />
                                    <span asp-validation-for="ActionDate" class="text-danger" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Создать" class="btn" />
                                    <a style="color:#333;" asp-controller="Admin" asp-action="Countries">
                                        <button type="button" class="btn">Отменить</button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <!-- /.row -->

</div>
<!-- /.col-lg-6 -->
<!-- jQuery -->
<script src="~/bower_components/jquery/dist/jquery.min.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="~/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

<!-- Metis Menu Plugin JavaScript -->
<script src="~/bower_components/metisMenu/dist/metisMenu.min.js"></script>

<!-- DataTables JavaScript -->
<script src="~/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
<script src="~/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js"></script>

<!-- Custom Theme JavaScript -->
<script src="~/js/sb-admin-2.js"></script>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script>
    $(document).ready(function() {
        $('#dataTables-example').DataTable({
                responsive: true
        });
    });
</script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}