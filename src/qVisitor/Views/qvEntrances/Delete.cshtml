@model qVisitor.Models.qvEntrance

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Удалить город</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="btn-group btn-breadcrumb" style="padding-bottom:20px;">
        <a asp-controller="Home" asp-action="Index" class="btn btn-default"><i class="glyphicon glyphicon-home"></i></a>
        <a asp-controller="qvCheckPoints" asp-action="Index" class="btn btn-default">КПП</a>
        <a href="#" class="btn btn-default">@ViewBag.CPName</a>
        <a asp-controller="qvCheckPoints" asp-action="Details" asp-route-id="@Model.CheckPointId" class="btn btn-default"> Посещения </a>
        <a href="#" class="btn btn-default">Удалить посещение</a>
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="glyphicon glyphicon-list-alt"></i>
                    Удалить город
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <h3>Are you sure you want to delete this?</h3>
                    <div>
                        <dl class="dl-horizontal">
                            <dt>
                                КПП
                            </dt>
                            <dd>
                                @Model.CheckPoint.Name
                            </dd>
                            <dt>
                                Тип посещения
                            </dt>
                            <dd>
                                @Model.EntranceType.Description
                            </dd>
                            <dt>
                                Номер заявки
                            </dt>
                            <dd>
                                @Model.Order.Id
                            </dd>
                            <dt>
                                Посетители
                            </dt>
                            <dd>
                                @foreach (var v in Model.Order.RefOrderVisitors)
                                {
                                    @String.Concat(v.Visitor.surname, " ", v.Visitor.name, " ", v.Visitor.patronymic) <br />
                                }
                            </dd>
                            <dt>
                                Дата посещения
                            </dt>
                            <dd>
                                @Model.ActionDate.Date.ToString("d")
                            </dd>
                        </dl>
                        <form asp-action="Delete">
                            <div class="form-actions no-color">
                                <input type="submit" value="Удалить" class="btn" />
                                <a style="color:#333;" asp-controller="qvCheckPoint" asp-action="Details" asp-route-id="@Model.CheckPointId">
                                    <button type="button" class="btn">Отменить</button>
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<!-- /.row -->
<!-- /.col-lg-6 -->
<!-- jQuery -->
<script src="~/bower_components/jquery/dist/jquery.min.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="~/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

<!-- Metis Menu Plugin JavaScript -->
<script src="~/bower_components/metisMenu/dist/metisMenu.min.js"></script>

<!-- DataTables JavaScript -->
<script src="~/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
<script src="~/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js"></script>

<!-- Custom Theme JavaScript -->
<script src="~/js/sb-admin-2.js"></script>

