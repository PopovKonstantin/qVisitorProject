@model qVisitor.Models.qvEntrance

@{
    ViewData["Title"] = "Details";
}


<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Посещение @Model.ActionDate.Date.ToString("d") по заявке №@Model.OrderId на @Model.CheckPoint.Name </h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="btn-group btn-breadcrumb" style="padding-bottom:20px;">
        <a asp-controller="Home" asp-action="Index" class="btn btn-default"><i class="glyphicon glyphicon-home"></i></a>
        <a asp-controller="qvCheckPoints" asp-action="Index" class="btn btn-default">КПП</a>
        <a href="#" class="btn btn-default">@Model.CheckPoint.Name</a>
        <a asp-controller="qvCheckPoints" asp-action="Details" asp-route-id="@Model.CheckPointId" class="btn btn-default"> Посещения </a>
        <a href="#" class="btn btn-default">Сведения о посещении</a>
    </div>
    <!-- /.col-lg-12 -->
    <div>
        @{

            Html.RenderPartial("~/Views/qvEntranceDocs/Index.cshtml", Model.EntranceDocs);
        }
        <div class="well">
            <a style="color:#333;" asp-controller="qvEntranceDocs" asp-action="Create" asp-route-id="@Model.Id">
                <button type="button" class="btn">Добавить данные документа</button>
            </a>
        </div>
    </div>
</div></div></div>
    </div>

<div>
    <div>
        @{
            Html.RenderPartial("~/Views/qvEntrancePhotoes/Index.cshtml", Model.EntrancePhotoes);
        }
    </div>
    <div class="well">
        <a style="color:#333;" asp-controller="qvEntrancePhotoes" asp-action="Create" asp-route-id="@Model.Id">
            <button type="button" class="btn">Добавить фото посетителя</button>
        </a>
    </div>
     </div>
</div></div></div>
</div>

<!-- jQuery -->
<script src="~/bower_components/jquery/dist/jquery.min.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="~/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

<!-- Metis Menu Plugin JavaScript -->
<script src="~/bower_components/metisMenu/dist/metisMenu.min.js"></script>

<!-- DataTables JavaScript -->
<script src="~/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
<script src="~/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js"></script>

<!-- Custom Theme JavaScript -->
<script src="~/js/sb-admin-2.js"></script>

