@model IEnumerable<qVisitor.Models.qvVisitiorPhoto>

@{
    ViewData["Title"] = "Index";
}
    

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="glyphicon glyphicon-list-alt"></i>
                    Фотография посетителя
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>
                                        Фотография
                                    </th>
                                    <th>
                                        Дата
                                    </th>
                                    <th>Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @if (item.Photo != null)
                                            {
                                                <img style='width:180px; height:240px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Photo))" />
                                            }
                                        </td>
                                        <td>
                                            @item.PhotoDate.Date.ToString("d")
                                        </td>
                                        <td>
                                            <a style="color:#333;" asp-controller="qvVisitiorPhotoes" asp-action="Details" asp-route-id="@item.Id"><button class="btn">Просмотр</button></a>
                                            <a style="color:#333;" asp-controller="qvVisitiorPhotoes" asp-action="Edit" asp-route-id="@item.Id"><button class="btn">Изменить</button></a>
                                            <a style="color:#333;" asp-controller="qvVisitiorPhotoes" asp-action="Delete" asp-route-id="@item.Id"><button class="btn">Удалить</button></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                    я
<!-- /.col-lg-6 -->
