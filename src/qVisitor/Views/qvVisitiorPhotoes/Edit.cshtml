@model qVisitor.Models.qvVisitiorPhoto

@{
    ViewData["Title"] = "Edit";
}


<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Изменить фотографию</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="btn-group btn-breadcrumb" style="padding-bottom:20px;">
        <a asp-controller="Home" asp-action="Index" class="btn btn-default"><i class="glyphicon glyphicon-home"></i></a>
        <a asp-controller="qvVisitors" asp-action="Index" class="btn btn-default">Посетители</a>
        <a asp-controller="qvVisitors" asp-action="Details" asp-route-id=@Model.VisitorId class="btn btn-default"> Фотография </a>
        <a href="#" class="btn btn-default"> Изменить фотографию</a>
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="glyphicon glyphicon-list-alt"></i>
                    Изменить фотографию
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div class="form-horizontal">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group hidden">
                                <label asp-for="VisitorId" class="control-label col-md-2">Посетитель</label>
                                <div class="col-md-10">
                                    <select asp-for="VisitorId" class="form-control" asp-items="ViewBag.VisitorId"></select>
                                    <span asp-validation-for="VisitorId" class="text-danger" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Photo" class="col-md-2 control-label">Фотография</label>
                                <div class="col-md-10">
                                    <input type="file" asp-for="Photo" class="form-control" />
                                    <span asp-validation-for="Photo" class="text-danger" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="PhotoDate" class="col-md-2 control-label">Дата</label>
                                <div class="col-md-10">
                                    <input type="date" asp-for="PhotoDate" class="form-control" />
                                    <span asp-validation-for="PhotoDate" class="text-danger" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Сохранить" class="btn" />
                                    <a style="color:#333;" asp-controller="qvVisitors" asp-action="Details" asp-route-id=@Model.VisitorId>
                                        <button type="button" class="btn">Отменить</button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- /.row -->
                <!-- /.row -->

            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
