@model qVisitor.Models.qvVisitorLuggage

@{
    ViewData["Title"] = "Edit";
}


<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Изменить данные о багаже посетителя @ViewBag.VisitorName</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="btn-group btn-breadcrumb" style="padding-bottom:20px;">
        <a asp-controller="Home" asp-action="Index" class="btn btn-default"><i class="glyphicon glyphicon-home"></i></a>
        <a asp-controller="qvOrders" asp-action="Index" class="btn btn-default">Заявки</a>
        <a asp-controller="qvOrders" asp-action="Details" asp-route-id="@ViewBag.RefOrdId" class="btn btn-default">Заявка № @ViewBag.RefOrdId</a>
        <a href="#" class="btn btn-default"> Багаж</a>
        <a href="#" class="btn btn-default"> Изменить данные о багаже посетителя @ViewBag.VisitorName</a>
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="glyphicon glyphicon-list-alt"></i>
                    Изменить данные о багаже посетителя @ViewBag.VisitorName
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <form asp-action="Edit">
                        <div class="form-horizontal">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label asp-for="OrderId" class="control-label col-md-2">Номер заявки</label>
                                <div class="col-md-10">
                                    <select asp-for="OrderId" class="form-control" asp-items="ViewBag.OrderId"></select>
                                    <span asp-validation-for="OrderId" class="text-danger" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="VisitorId" class="control-label col-md-2">Номер посетителя</label>
                                <div class="col-md-10">
                                    <select asp-for="VisitorId" class="form-control" asp-items="ViewBag.VisitorId"></select>
                                    <span asp-validation-for="VisitorId" class="text-danger" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Luggage" class="col-md-2 control-label">Багаж</label>
                                <div class="col-md-10">
                                    <input asp-for="Luggage" class="form-control" />
                                    <span asp-validation-for="Luggage" class="text-danger" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Сохранить" class="btn" />
                                    <a style="color:#333;" asp-controller="qvOrders" asp-action="Details" asp-route-id=@Model.OrderId>
                                        <button type="button" class="btn">Отменить</button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- /.row -->
                <!-- /.row -->

            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}