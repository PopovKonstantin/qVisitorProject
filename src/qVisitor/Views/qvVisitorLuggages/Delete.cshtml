@model qVisitor.Models.qvVisitorLuggage

@{
    ViewData["Title"] = "Delete";
}



<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Удалить данные о багаже посетителя @ViewBag.VisitorName</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="btn-group btn-breadcrumb" style="padding-bottom:20px;">
        <a asp-controller="Home" asp-action="Index" class="btn btn-default"><i class="glyphicon glyphicon-home"></i></a>
        <a asp-controller="qvOrders" asp-action="Index" class="btn btn-default">Заявки</a>
        <a asp-controller="qvOrders" asp-action="Details" asp-route-id="@ViewBag.RefOrdId" class="btn btn-default">Заявка № @ViewBag.RefOrdId</a>
        <a href="#" class="btn btn-default"> Багаж</a>
        <a href="#" class="btn btn-default"> Удалить данные о багаже посетителя @ViewBag.VisitorName</a>
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="glyphicon glyphicon-list-alt"></i>
                    Удалить данные о багаже посетителя @ViewBag.VisitorName
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <h3>Вы действительно хотите удалить запись @Html.DisplayFor(model => model.Luggage) в разделе Багаж посетителя @ViewBag.VisitorName?</h3>
                    <div>
                        <form asp-action="Delete">
                            <div class="form-actions no-color">
                                <input type="submit" value="Удалить" class="btn" />
                                <a style="color:#333;" asp-controller="qvOrders" asp-action="Details" asp-route-id=@Model.OrderId>
                                    <button type="button" class="btn">Отменить</button>
                                </a>
                            </div>
                        </form>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <!-- /.row -->

</div>
<!-- /.col-lg-6 -->
<!-- jQuery -->
<script src="~/bower_components/jquery/dist/jquery.min.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="~/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

<!-- Metis Menu Plugin JavaScript -->
<script src="~/bower_components/metisMenu/dist/metisMenu.min.js"></script>

<!-- DataTables JavaScript -->
<script src="~/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
<script src="~/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js"></script>

<!-- Custom Theme JavaScript -->
<script src="~/js/sb-admin-2.js"></script>

