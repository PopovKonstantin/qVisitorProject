@model IEnumerable<qVisitor.Models.qvBranch>

@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<div class="panel panel-default">
    <div class="panel-heading">
        <i class="glyphicon glyphicon-list-alt"></i>
        Филиал
    </div>

    <div class="panel-body">
        <div class="dataTable_wrapper">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            Компания
                        </th>
                        <th>
                            Родительский филиал
                        </th>
                        <th>
                            Название
                        </th>
                        <th>
                            Действия
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Company.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HighBranchId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                <a style="color:#333;" asp-controller="qvBranches" asp-action="Details" asp-route-id="@item.Id"><button class="btn">Просмотр</button></a>
                                <a style="color:#333;" asp-controller="qvBranches" asp-action="Edit" asp-route-id="@item.Id"><button class="btn">Изменить</button></a>
                                <a style="color:#333;" asp-controller="qvBranches" asp-action="Delete" asp-route-id="@item.Id"><button class="btn">Удалить</button></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
        
<!-- /.panel-body -->
<!-- /.col-lg-6 -->
