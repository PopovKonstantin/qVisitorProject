@model IEnumerable<qVisitor.Models.ApplicationUser>

@{
    ViewData["Title"] = "Index";
}


<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Пользователи</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="btn-group btn-breadcrumb" style="padding-bottom:20px;">
        <a asp-controller="Home" asp-action="Index" class="btn btn-default"><i class="glyphicon glyphicon-home"></i></a>
        <a href="#" class="btn btn-default">Пользователи</a>
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="glyphicon glyphicon-list-alt"></i>
                    Пользователи
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th style="text-align:center; width:50px;">#</th>
                                    <th>
                                        Логин
                                    </th>
                                    <th>
                                        Роль
                                    </th>
                                    <th>
                                        Действия
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            <a style="color:#333;" asp-controller="qvApplicationUsers" asp-action="Details" asp-route-id="@item.Id"><button class="btn">Роли пользователя</button></a>
                                        </td>
                                        <td>
                                            <a style="color:#333;" asp-controller="qvApplicationUsers" asp-action="Edit" asp-route-id="@item.Id"><button class="btn">Изменить имя пользователя</button></a>
                                            <a style="color:#333;" asp-controller="Roles" asp-action="AddRoleToUser" asp-route-userId="@item.Id"><button class="btn">Изменить роль пользователя</button></a>
                                            <a style="color:#333;" asp-controller="qvApplicationUsers" asp-action="Delete" asp-route-id ="@item.Id"><button class="btn">Удалить</button></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                    <div class="well">
                        <a style="color:#333;" asp-controller="Account" asp-action="Register">
                            <button type="button" class="btn">Добавить пользователя</button>
                        </a>
                        <a style="color:#333;" asp-controller="Roles" asp-action="Index">
                            <button type="button" class="btn">Добавить роль пользователя</button>
                        </a>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <!-- /.row -->

</div>
<!-- /.col-lg-6 -->
<!-- jQuery -->
<script src="~/bower_components/jquery/dist/jquery.min.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="~/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

<!-- Metis Menu Plugin JavaScript -->
<script src="~/bower_components/metisMenu/dist/metisMenu.min.js"></script>

<!-- DataTables JavaScript -->
<script src="~/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
<script src="~/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js"></script>

<!-- Custom Theme JavaScript -->
<script src="~/js/sb-admin-2.js"></script>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script>
    $(document).ready(function() {
        $('#dataTables-example').DataTable({
                responsive: true
        });
    });
</script>