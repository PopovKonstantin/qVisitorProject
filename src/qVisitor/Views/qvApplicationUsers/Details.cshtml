@model IEnumerable<string>

@{
    ViewData["Title"] = "Edit";
}



<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Изменить имя пользователя</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="btn-group btn-breadcrumb" style="padding-bottom:20px;">
        <a asp-controller="Home" asp-action="Index" class="btn btn-default"><i class="glyphicon glyphicon-home"></i></a>
        <a asp-controller="qvApplicationUsers" asp-action="Index" class="btn btn-default">Роли пользователя</a>
        <a href="#" class="btn btn-default">Изменить имя пользователя</a>
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="glyphicon glyphicon-list-alt"></i>
                    Изменить имя пользователя
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div>
                        <dl class="dl-horizontal">
                            <dt>
                                Роли пользователя
                            </dt>
                            <dd>
                                @foreach (var item in Model)
                                {
                                    @item 
                                }
                            </dd>
                        </dl>
                    </div>
                    <div>
                        <a style="color:#333;" asp-controller="qvApplicationUsers" asp-action="Index"><button class="btn">Назад к списку</button></a>
                    </div>
                </div>
                <!-- /.row -->
                <!-- /.row -->

            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}