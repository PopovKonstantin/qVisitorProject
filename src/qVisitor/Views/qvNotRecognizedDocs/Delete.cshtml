@model qVisitor.Models.qvNotRecognizedDoc

@{
    ViewData["Title"] = "Delete";
}


<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Удалить неопознанный документ</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="btn-group btn-breadcrumb" style="padding-bottom:20px;">
        <a asp-controller="Home" asp-action="Index" class="btn btn-default"><i class="glyphicon glyphicon-home"></i></a>
        <a asp-controller="qvCheckPoints" asp-action="Index" class="btn btn-default">КПП</a>
        <a href="#" class="btn btn-default">@Model.CheckPoint.Name</a>
        <a asp-controller="qvCheckPoints" asp-action="Details" asp-route-id="@Model.CheckPointId" class="btn btn-default"> Неопознанные документы </a>
        <a href="#" class="btn btn-default">Удалить неопознанный документ</a>
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="glyphicon glyphicon-list-alt"></i>
                    Удалить неопознанный документ
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <h3>Вы действительно хотите удалить сканирование нопознанного документа?</h3>
                    <div>
                        <dl class="dl-horizontal">
                            <dt>
                                Сканирование
                            </dt>
                            <dd>
                                @if (Model.Scan != null)
                                {
                                    <img style='width:240px; height:180px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Scan))" />
                                }
                            </dd>
                        </dl>
                        <form asp-action="Delete">
                            <div class="form-actions no-color">
                                <input type="submit" value="Удалить" class="btn" />
                                <a style="color:#333;" asp-controller="qvCountries" asp-action="Index">
                                    <button type="button" class="btn">Отменить</button>
                                </a>
                            </div>
                        </form>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <!-- /.row -->

</div>
<!-- /.col-lg-6 -->
<!-- jQuery -->
<script src="~/bower_components/jquery/dist/jquery.min.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="~/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

<!-- Metis Menu Plugin JavaScript -->
<script src="~/bower_components/metisMenu/dist/metisMenu.min.js"></script>

<!-- DataTables JavaScript -->
<script src="~/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
<script src="~/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js"></script>

<!-- Custom Theme JavaScript -->
<script src="~/js/sb-admin-2.js"></script>

