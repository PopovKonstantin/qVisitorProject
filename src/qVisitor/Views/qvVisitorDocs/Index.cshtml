@model IEnumerable<qVisitor.Models.qvVisitorDoc>

@{
    ViewData["Title"] = "Index";
}



    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Документы посетителя</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <ol class="breadcrumb">
        <li>
            <a asp-controller="qvVisitors" asp-action="Index"> Посетители</a>
        </li>
        <li class="active">
            Документы посетителя
        </li>
    </ol>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="glyphicon glyphicon-list-alt"></i>
                    Документы посетителя
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>
                                        Дата истечения срока актуальности данных
                                    </th>
                                    <th>
                                        Дата обновления данных
                                    </th>
                                    <th>
                                        Фамилия
                                    </th>
                                    <th>
                                        Имя
                                    </th>
                                    <th>
                                        Номер документа
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ExpireDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IssueDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Surname)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Number)
                                        </td>
                                        <td>
                                            <a style="color:#333;" asp-controller="qvVisitorDocs" asp-action="Details" asp-route-id="@item.Id"><button class="btn">Просмотр</button></a>
                                            <a style="color:#333;" asp-controller="qvVisitorDocs" asp-action="Edit" asp-route-id="@item.Id"><button class="btn">Изменить</button></a>
                                            <a style="color:#333;" asp-controller="qvVisitorDocs" asp-action="Delete" asp-route-id="@item.Id"><button class="btn">Удалить</button></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                    <div class="well">
                        <a style="color:#333;" asp-controller="qvVisitorDocs" asp-action="Create">
                            <button type="button" class="btn">Добавить документ</button>
                        </a>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <!-- /.row -->


<!-- /.col-lg-6 -->
<!-- jQuery -->
<script src="~/bower_components/jquery/dist/jquery.min.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="~/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

<!-- Metis Menu Plugin JavaScript -->
<script src="~/bower_components/metisMenu/dist/metisMenu.min.js"></script>

<!-- DataTables JavaScript -->
<script src="~/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
<script src="~/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js"></script>

<!-- Custom Theme JavaScript -->
<script src="~/js/sb-admin-2.js"></script>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script>
    $(document).ready(function() {
        $('#dataTables-example').DataTable({
                responsive: true
        });
    });
</script>
