@model qVisitor.Models.qvVisitor

@{
    ViewData["Title"] = "Edit";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Изменить данные посетителя</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="btn-group btn-breadcrumb" style="padding-bottom:20px;">
        <a asp-controller="Home" asp-action="Index" class="btn btn-default"><i class="glyphicon glyphicon-home"></i></a>
        <a asp-controller="qvVisitors" asp-action="Index" class="btn btn-default">Посетители</a>
        <a href="#" class="btn btn-default"> Изменить данные посетителя</a>
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="glyphicon glyphicon-list-alt"></i>
                    Изменить данные посетителя
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <form asp-action="Edit">
                        <div class="form-horizontal">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label asp-for="surname" class="col-md-2 control-label">Фамилия</label>
                                <div class="col-md-10">
                                    <input asp-for="surname" class="form-control" />
                                    <span asp-validation-for="surname" class="text-danger" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="name" class="col-md-2 control-label">Имя</label>
                                <div class="col-md-10">
                                    <input asp-for="name" class="form-control" />
                                    <span asp-validation-for="name" class="text-danger" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="patronymic" class="col-md-2 control-label">Отчество</label>
                                <div class="col-md-10">
                                    <input asp-for="patronymic" class="form-control" />
                                    <span asp-validation-for="patronymic" class="text-danger" />
                                </div>
                            </div>    
                            <div class="form-group">
                                <label asp-for="Gender" class="col-md-2 control-label">Пол</label>
                                <div class="col-md-10">
                                    <select asp-for="Gender" class="form-control">
                                        <option>Мужской</option>
                                        <option>Женский</option>
                                    </select>
                                    <span asp-validation-for="Gender" class="text-danger" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="birthdate" class="col-md-2 control-label">Дата рождения</label>
                                <div class="col-md-10">
                                    <input type="date" asp-for="birthdate" class="form-control" />
                                    <span asp-validation-for="birthdate" class="text-danger" />
                                </div>
                            </div>                        
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Сохранить" class="btn" />
                                    <a style="color:#333;" asp-controller="qvVisitors" asp-action="Index">
                                        <button type="button" class="btn">Отменить</button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <!-- /.row -->

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}