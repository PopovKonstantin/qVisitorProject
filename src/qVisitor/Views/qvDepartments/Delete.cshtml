@model qVisitor.Models.qvDepartment

@{
    ViewData["Title"] = "Delete";
}


<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Удалить департамент</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="btn-group btn-breadcrumb" style="padding-bottom:20px;">
        <a asp-controller="Home" asp-action="Index" class="btn btn-default"><i class="glyphicon glyphicon-home"></i></a>
        <a asp-controller="qvCompanies" asp-action="Index" class="btn btn-default">Компания</a>
        <a asp-controller="qvCompanies" asp-action="Details" asp-route-id="@ViewBag.CompanyReff" class="btn btn-default"> Филиалы </a>
        <a asp-controller="qvBranches" asp-action="Details" asp-route-id="@Model.BranchId" class="btn btn-default"> Департаменты </a>
        <a href="#" class="btn btn-default"> Удалить департамент</a>
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="glyphicon glyphicon-list-alt"></i>
                    Удалить департамент
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <h4>Вы действительно хотите удалить департамент @Html.DisplayFor(model => model.Name) из списка департаментов?</h4>
                    <div style="padding-bottom:10px;"></div>
                    <form asp-action="Delete">
                        <div class="form-actions no-color">
                            <input type="submit" value="Удалить" class="btn" />
                            <a style="color:#333;" asp-controller="qvBranches" asp-action="Details" asp-route-id="@Model.BranchId">
                                <button type="button" class="btn">Отменить</button>
                            </a>
                        </div>
                    </form>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.col-lg-6 -->
<!-- jQuery -->
<script src="~/bower_components/jquery/dist/jquery.min.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="~/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

<!-- Metis Menu Plugin JavaScript -->
<script src="~/bower_components/metisMenu/dist/metisMenu.min.js"></script>

<!-- DataTables JavaScript -->
<script src="~/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
<script src="~/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js"></script>

<!-- Custom Theme JavaScript -->
<script src="~/js/sb-admin-2.js"></script>

