@using qVisitor.Controllers;
@using qVisitor.Data;

@model qVisitor.Models.qvCountry


@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">@Html.DisplayFor(model => model.Name)</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="btn-group btn-breadcrumb" style="padding-bottom:20px;">
        <a asp-controller="Home" asp-action="Index" class="btn btn-default"><i class="glyphicon glyphicon-home"></i></a>
        <a asp-controller="qvCountries" asp-action="Index" class="btn btn-default">Страны</a>
        <a href="#" class="btn btn-default">@Html.DisplayFor(model => model.Name)</a>
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div>
                @{
                    Html.RenderPartial("~/Views/qvCities/Index.cshtml", Model.Cities);
                }
                <div class="well">
                    <a style="color:#333;" asp-controller="qvCities" asp-action="Create" asp-route-reffid="@Model.Id ">
                        <button type="button" class="btn">Добавить город</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
        </div>
    </div>
</div>

